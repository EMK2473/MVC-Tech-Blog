<main class="container mt-5">
  <article>
    <h1>{{title}}</h1>
    <p>Posted by: {{user.username}} | Posted on: {{format_date createdAt}}</p>
    <p>{{content}}</p>
  </article>
  {{#if logged_in}}
    <form class="new-comment-form" class="mb-3">
      <div class="mb-3">
        <label for="comment" class="form-label">Add Comment:</label>
        <textarea
          class="form-control"
          id="content-new-comment"
          rows="3"
          placeholder="Add comment..."
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  {{/if}}
  <h2>Comment History:</h2>
  {{#each comments}}
    <div class="comment mb-3">
      <p>{{comment_text}}</p>
      <p>Commented by: {{user.username}} on: {{format_date createdAt}}</p>
    </div>
  {{/each}}
</main>