<main class="container mt-5">
  <h1 class="mb-4">Edit Your Post</h1>
  <form class="update-post-form" class="mb-3">
    <div class="mb-3">
      <label for="title-update-post" class="form-label">Title</label>
      <input
        type="text"
        class="form-control"
        id="title-update-post"
        placeholder="Enter a title"
        value="{{title}}"
      />
    </div>
    <div class="mb-3">
      <label for="content-update-post" class="form-label">Content</label>
      <textarea
        class="form-control"
        id="content-update-post"
        rows="3"
        placeholder="Enter content"
      >{{content}}</textarea>
    </div>
    <div class="mb-3 text-center">
    <button type="submit" id="update-post" class="btn btn-primary">Update Post <i class="bi bi-pencil-square"></i></button>
    <a href="/dashboard" class="btn btn-warning">Cancel <i class="bi bi-exclamation-diamond"></i></a>
    <button type="button" id="delete-post" class="btn btn-danger">Delete Post <i class="bi bi-trash-fill"></i></button>
  </div>
  </form>
</main>