<main class="container mt-4">
<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Dashboard</h1>
        <a href="/newpost" class="btn btn-success">Create New Post</a>
    </div>
</div>
<br>
<h1 class="mb-4">Tech Blogs:</h1>
{{#each posts}}
<div class="post-container post mb-3 card">
    <div class="card-body">
        <h2 class="card-title"><a href="/post/{{id}}" class="text-decoration-none-text-reset">{{title}}</a></h2>
        <p class="card-text">Posted by: {{user.username}} | Date: {{format_date created_at}}</p>
    </div>
</div>
</main>
